<h1>Edit Post</h1>

 <%= form_with scope: :article, model: @article, local: true do |form| %>

 	<p>
 		<%= form.label :author %><br>
 		<%= form.text_field :author %>
 	</p>

 	<p>
 		<%= form.label :photo_url %><br>
 		<%= form.text_area :photo_url %>
 	</p>

 	<p>
 		<%= form.label :title %><br>
 		<%= form.text_area :title %>
 	</p>

 	<p>
 		<%= form.submit 'submit photo' %>
 	</p>
 <% end %>

 <%= link_to 'Back', article_path %>